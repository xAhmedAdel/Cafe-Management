<Window x:Class="CafeManagement.Client.Views.OrderMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeManagement.Client.Views"
        mc:Ignorable="d"
        Title="Cafe Menu - Order Food and Drinks"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Width="800"
        Height="600"
        WindowStyle="None"
        Topmost="True">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Enum to Boolean Converter for Category Selection -->
        <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>

        <!-- Count to Visibility Converter -->
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>

        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="15,10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2C3E50"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                    <Setter Property="Background" Value="#3498DB"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ProductCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AddToCartButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#95A5A6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Height="80" VerticalAlignment="Top">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ•" FontSize="32" Margin="0,0,15,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Cafe Menu" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Cart Summary -->
                    <Border Background="#E74C3C" CornerRadius="8" Padding="12,8" Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ›’" FontSize="16" Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Cart.TotalItems, StringFormat='({0})'}" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="{Binding Cart.FormattedTotal, StringFormat='  {0} L.E'}" FontSize="14" FontWeight="Bold" Foreground="White" Margin="5,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Close Button -->
                    <Button Click="CloseButton_Click" Background="Transparent" BorderThickness="0" Padding="8">
                        <TextBlock Text="âŒ" FontSize="20" Foreground="#E74C3C"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Margin="20,100,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Category Tabs -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <Button Content="â˜• Drinks" Style="{StaticResource CategoryButtonStyle}" Margin="0,0,10,0" Click="Category_Click"/>
                <Button Content="ðŸ” Food" Style="{StaticResource CategoryButtonStyle}" Margin="0,0,10,0" Click="Category_Click"/>
                <Button Content="ðŸ¿ Snacks" Style="{StaticResource CategoryButtonStyle}" Click="Category_Click"/>
            </StackPanel>

            <!-- Products Grid -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ProductCardStyle}" Width="220">
                                <StackPanel>
                                    <!-- Product Image -->
                                    <Border Background="#34495E" CornerRadius="8" Height="120" Margin="0,0,0,10">
                                        <TextBlock Text="ðŸ“·" FontSize="48" Foreground="#7F8C8D" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Product Info -->
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Description}" FontSize="11" Foreground="#BDC3C7" TextWrapping="Wrap" Margin="0,3,0,0" Height="40" TextTrimming="WordEllipsis"/>
                                    <TextBlock Text="{Binding FormattedPrice}" FontSize="18" FontWeight="Bold" Foreground="#3498DB" Margin="0,5,0,0"/>

                                    <!-- Add to Cart Controls -->
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Quantity Controls -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                            <Button Content="âˆ’" Width="25" Height="25" Background="#E74C3C" Foreground="White" BorderThickness="0"
                                                    Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding ProductId}"/>
                                            <TextBlock Text="{Binding Quantity}" Width="30" TextAlignment="Center" FontSize="14" FontWeight="Bold"
                                                       Foreground="White" VerticalAlignment="Center"/>
                                            <Button Content="+" Width="25" Height="25" Background="#27AE60" Foreground="White" BorderThickness="0"
                                                    Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding ProductId}"/>
                                        </StackPanel>

                                        <!-- Add to Cart Button -->
                                        <Button Grid.Column="1" Content="Add to Cart" Style="{StaticResource AddToCartButtonStyle}"
                                                Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Cart Summary & Checkout -->
        <Border Grid.Row="1" VerticalAlignment="Bottom" Background="#2C3E50" CornerRadius="10,10,0,0" Padding="20" Margin="0,0,0,0"
                Visibility="{Binding Cart.Items.Count, Converter={StaticResource CountToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Cart Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ›’" FontSize="16" Margin="0,0,10,0" Foreground="White"/>
                    <TextBlock Text="{Binding Cart.TotalItems, StringFormat='{}{0} items'}" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Cart.FormattedTotal, StringFormat='{} - {0}'}" FontSize="14" FontWeight="Bold" Foreground="#3498DB" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Checkout Button -->
                <Button Grid.Column="1" Content="Checkout" Command="{Binding CheckoutCommand}"
                        Background="#27AE60" Foreground="White" BorderThickness="0"
                        Padding="20,10" FontWeight="Bold" FontSize="14"
                        Margin="10,0,0,0"/>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Grid Background="#1E1E1E" Opacity="0.8" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Loading menu..." FontSize="18" Foreground="White" HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="10" Margin="0,10,0,0" Background="#34495E" Foreground="#3498DB"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>