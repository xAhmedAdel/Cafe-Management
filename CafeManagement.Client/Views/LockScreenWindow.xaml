<Window x:Class="CafeManagement.Client.Views.LockScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeManagement.Client.Views"
        mc:Ignorable="d"
        Title="Cafe Management - Lock Screen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="Black"
        StateChanged="Window_StateChanged"
        d:DesignHeight="1080" d:DesignWidth="1920">

    <Window.Resources>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Slide in animation for right panel -->
        <Storyboard x:Key="SlidePanelIn">
            <ThicknessAnimation Storyboard.TargetName="RightSlidePanel"
                               Storyboard.TargetProperty="Margin"
                               To="0,0,0,0"
                               Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <!-- Slide out animation for right panel -->
        <Storyboard x:Key="SlidePanelOut">
            <ThicknessAnimation Storyboard.TargetName="RightSlidePanel"
                               Storyboard.TargetProperty="Margin"
                               To="0,0,-350,0"
                               Duration="0:0:0.3">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseInOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid Name="MainGrid">
        <!-- Background with gradient animation -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Name="BackgroundGradient">
                <GradientStop Color="#000033" Offset="0" x:Name="ColorStop1"/>
                <GradientStop Color="#000066" Offset="1" x:Name="ColorStop2"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Animated particles -->
        <Canvas Name="ParticleCanvas" Opacity="0.3"/>

        <!-- Right Slide Panel (User Info) -->
        <Border Name="RightSlidePanel"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Width="350"
                Background="#2C3E50"
                CornerRadius="10,0,0,10"
                Margin="0,0,-350,0"
                Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="5" Opacity="0.3" Color="Black"/>
            </Border.Effect>
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- User Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,25">
                    <TextBlock Text="ðŸ‘¤" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.CurrentUserName, FallbackValue='User Name'}"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Session Info -->
                <StackPanel Grid.Row="1" Margin="0,0,0,25">
                    <TextBlock Text="Session Information"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#ECF0F1"
                               Margin="0,0,0,15"/>

                    <!-- Time Remaining -->
                    <Border Background="#34495E" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Time Remaining"
                                       FontSize="12"
                                       Foreground="#BDC3C7"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.TimeRemainingFormatted, FallbackValue='00:00:00'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#3498DB"
                                       FontFamily="Consolas"/>
                        </StackPanel>
                    </Border>

                    <!-- Hourly Rate -->
                    <Border Background="#34495E" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Hourly Rate"
                                       FontSize="12"
                                       Foreground="#BDC3C7"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.HourlyRate, StringFormat='${0:F2}/hour', FallbackValue='$0.00/hour'}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="#2ECC71"/>
                        </StackPanel>
                    </Border>

                    <!-- Session Start -->
                    <Border Background="#34495E" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                        <StackPanel>
                            <TextBlock Text="Session Started"
                                       FontSize="12"
                                       Foreground="#BDC3C7"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.SessionStartTimeFormatted, FallbackValue='Not started'}"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="#ECF0F1"/>
                        </StackPanel>
                    </Border>

                    <!-- Current Cost -->
                    <Border Background="#34495E" CornerRadius="5" Padding="15">
                        <StackPanel>
                            <TextBlock Text="Current Cost"
                                       FontSize="12"
                                       Foreground="#BDC3C7"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.CurrentCost, StringFormat='${0:F2}', FallbackValue='$0.00'}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#E74C3C"/>
                        </StackPanel>
                    </Border>

                    <!-- Usage Time -->
                    <Border Background="#34495E" CornerRadius="5" Padding="15" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Usage Time"
                                       FontSize="12"
                                       Foreground="#BDC3C7"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.UsageTimeFormatted, FallbackValue='00:00:00'}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#3498DB"/>
                        </StackPanel>
                    </Border>

                    <!-- Account Balance -->
                    <Border Background="#34495E" CornerRadius="5" Padding="15" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBlock Text="Account Balance"
                                       FontSize="12"
                                       Foreground="#BDC3C7"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.AccountBalance, StringFormat='${0:F2}', FallbackValue='$0.00'}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#27AE60"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Spacer -->
                <Grid Grid.Row="2"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="3">
                    <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.ExtendSessionAsyncCommand}"
                            Height="45"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#27AE60"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="â°" Margin="0,0,8,0"/>
                            <TextBlock Text="Extend Session"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.LogoutAsyncCommand}"
                            Height="45"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#E74C3C"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,0,10">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸšª" Margin="0,0,8,0"/>
                            <TextBlock Text="Logout"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.HideToTrayCommand}"
                            Height="45"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#95A5A6"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7F8C8D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ‘ï¸" Margin="0,0,8,0"/>
                            <TextBlock Text="Hide"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lock Screen Content (hidden when user is logged in) -->
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.IsUserLoggedIn, Converter={StaticResource InverseBoolToVisibilityConverter}}">
            <!-- Client Name -->
            <TextBlock Text="{Binding ClientName}"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       FontFamily="Segoe UI"/>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="24"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"
                       FontFamily="Segoe UI"/>

            <!-- Login Form -->
            <Border CornerRadius="10"
                    Background="#FFFFFF"
                    Padding="40,30"
                    Margin="0,0,0,20"
                    MaxWidth="400">
                <StackPanel DataContext="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel}">
                    <TextBlock Text="ðŸ”" FontSize="36" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="User Login"
                               FontSize="20"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#2C3E50"
                               Margin="0,0,0,25"/>

                    <!-- Username field -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Username:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"
                                   Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10"
                                 Background="#F8F9FA"
                                 BorderBrush="#BDC3C7"
                                 BorderThickness="1"/>
                    </StackPanel>

                    <!-- Password field -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="Password:"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"
                                   Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox"
                                    Height="35"
                                    FontSize="14"
                                    Padding="10"
                                    Background="#F8F9FA"
                                    BorderBrush="#BDC3C7"
                                    BorderThickness="1"
                                    PasswordChanged="PasswordBox_PasswordChanged"/>
                    </StackPanel>

                    <!-- Status message -->
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="#E74C3C"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"
                               Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Login button -->
                    <Button Command="{Binding LoginCommand}"
                            IsEnabled="{Binding CanLogin}"
                            Height="40"
                            FontSize="14"
                            FontWeight="Bold"
                            Background="#3498DB"
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    BorderBrush="{TemplateBinding BorderBrush}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#95A5A6"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”‘" Margin="0,0,8,0"/>
                            <TextBlock Text="Login"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Time Remaining (shown when logged in) -->
            <Border CornerRadius="10"
                    Background="#1A1A1A"
                    Padding="30,20"
                    Margin="0,0,0,20"
                    Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Time Remaining"
                               FontSize="18"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Center"
                               FontFamily="Segoe UI"/>
                    <TextBlock Text="{Binding TimeRemainingFormatted}"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="#00FF00"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               FontFamily="Consolas"/>
                </StackPanel>
            </Border>

            <!-- Session Info -->
            <Border CornerRadius="10"
                    Background="#1A1A1A"
                    Padding="20,15"
                    Margin="0,0,0,20"
                    Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Session Started:"
                               FontSize="14"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding SessionStartTime}"
                               FontSize="16"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Rate:"
                               FontSize="14"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Left"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding HourlyRate, StringFormat='${0:F2}/hour'}"
                               FontSize="16"
                               Foreground="#00FF00"
                               HorizontalAlignment="Left"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <!-- Unlock Button (for admin/operator) -->
            <Button Content="Unlock"
                    FontSize="18"
                    Padding="40,15"
                    Background="#333333"
                    Foreground="White"
                    BorderBrush="#666666"
                    Command="{Binding UnlockCommand}"
                    Visibility="Collapsed"
                    Margin="0,20,0,0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- System Info (bottom right corner) -->
        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="20">
            <TextBlock Text="{Binding CurrentTime}"
                       FontSize="14"
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Right"
                       FontFamily="Consolas"/>
            <TextBlock Text="{Binding ClientInfo}"
                       FontSize="12"
                       Foreground="#888888"
                       HorizontalAlignment="Right"
                       Margin="0,5,0,0"
                       FontFamily="Segoe UI"/>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Ellipse Width="10" Height="10"
                         Margin="0,0,8,0"
                         VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <SolidColorBrush Color="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"/>
                    </Ellipse.Fill>
                </Ellipse>
                <TextBlock Text="{Binding ConnectionStatus}"
                           FontSize="12"
                           Foreground="{Binding IsConnected, Converter={StaticResource BoolToBrushConverter}}"
                           HorizontalAlignment="Right"
                           FontFamily="Segoe UI"
                           FontWeight="SemiBold"/>
            </StackPanel>
        </StackPanel>

        <!-- Exit Button (top right) -->
        <Button Content="Exit"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,20,0"
                Padding="20,10"
                Background="#AA0000"
                Foreground="White"
                BorderBrush="#FF0000"
                Command="{Binding ExitCommand}"
                Visibility="Collapsed"
                Cursor="Hand"/>
    </Grid>
</Window>