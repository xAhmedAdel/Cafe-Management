<Window x:Class="CafeManagement.Client.Views.LockScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cafe Management - Lock Screen"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="Black"
        d:DesignHeight="1080" d:DesignWidth="1920">

    <Grid Name="MainGrid">
        <!-- Background with gradient animation -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" x:Name="BackgroundGradient">
                <GradientStop Color="#000033" Offset="0" x:Name="ColorStop1"/>
                <GradientStop Color="#000066" Offset="1" x:Name="ColorStop2"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Animated particles -->
        <Canvas Name="ParticleCanvas" Opacity="0.3"/>

        <!-- Lock Screen Content -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Client Name -->
            <TextBlock Text="{Binding ClientName}"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"
                       FontFamily="Segoe UI"/>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}"
                       FontSize="24"
                       Foreground="#CCCCCC"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,40"
                       FontFamily="Segoe UI"/>

            <!-- Time Remaining -->
            <Border CornerRadius="10"
                    Background="#1A1A1A"
                    Padding="30,20"
                    Margin="0,0,0,20">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Time Remaining"
                               FontSize="18"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Center"
                               FontFamily="Segoe UI"/>
                    <TextBlock Text="{Binding TimeRemainingFormatted}"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="#00FF00"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               FontFamily="Consolas">
                        <TextBlock.Triggers>
                            <DataTrigger Binding="{Binding TimeRemainingMinutes}" Value="5">
                                <Setter Property="TextBlock.Foreground" Value="#FFFF00"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TimeRemainingMinutes}" Value="2">
                                <Setter Property="TextBlock.Foreground" Value="#FF6600"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding TimeRemainingMinutes}" Value="0">
                                <Setter Property="TextBlock.Foreground" Value="#FF0000"/>
                            </DataTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- Session Info -->
            <Border CornerRadius="10"
                    Background="#1A1A1A"
                    Padding="20,15"
                    Margin="0,0,0,20"
                    Visibility="{Binding HasSessionInfo, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Session Started:"
                               FontSize="14"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Left"/>
                    <TextBlock Text="{Binding SessionStartTime}"
                               FontSize="16"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Rate:"
                               FontSize="14"
                               Foreground="#AAAAAA"
                               HorizontalAlignment="Left"
                               Margin="0,10,0,0"/>
                    <TextBlock Text="{Binding HourlyRate, StringFormat='${0:F2}/hour'}"
                               FontSize="16"
                               Foreground="#00FF00"
                               HorizontalAlignment="Left"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Border>

            <!-- Unlock Button (for admin/operator) -->
            <Button Content="Unlock"
                    FontSize="18"
                    Padding="40,15"
                    Background="#333333"
                    Foreground="White"
                    BorderBrush="#666666"
                    Command="{Binding UnlockCommand}"
                    Visibility="{Binding CanUnlock, Converter={StaticResource BoolToVisibilityConverter}}"
                    Margin="0,20,0,0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- System Info (bottom right corner) -->
        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="20">
            <TextBlock Text="{Binding CurrentTime}"
                       FontSize="14"
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Right"
                       FontFamily="Consolas"/>
            <TextBlock Text="{Binding ClientInfo}"
                       FontSize="12"
                       Foreground="#888888"
                       HorizontalAlignment="Right"
                       Margin="0,5,0,0"
                       FontFamily="Segoe UI"/>
        </StackPanel>

        <!-- Exit Button (top right) -->
        <Button Content="Exit"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,20,0"
                Padding="20,10"
                Background="#AA0000"
                Foreground="White"
                BorderBrush="#FF0000"
                Command="{Binding ExitCommand}"
                Visibility="{Binding CanExit, Converter={StaticResource BoolToVisibilityConverter}}"
                Cursor="Hand"/>
    </Grid>
</Window>