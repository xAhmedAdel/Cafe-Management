<Window x:Class="CafeManagement.Client.Views.UserDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cafe Management - User Dashboard"
        WindowStyle="{StaticResource LockScreenWindowStyle}"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        MinHeight="600"
        MaxWidth="400"
        MaxHeight="600"
        Topmost="False">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="ModernCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2C3E50"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="5" Opacity="0.2" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" CornerRadius="15" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="10" Opacity="0.4" Color="Black"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- User Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="ðŸ‘¤" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.CurrentUserName, FallbackValue='User Name'}"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- User Info Cards -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Account Balance -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’° Account Balance"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#3498DB"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.AccountBalance, StringFormat='${0:F2}', FallbackValue='$0.00'}"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="#3498DB"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Current Session -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ• Session Started"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#E67E22"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.SessionStartTimeFormatted, FallbackValue='Not started'}"
                                       FontSize="16"
                                       Foreground="#E67E22"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Usage Stats -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <TextBlock Text="â±ï¸ Usage Time"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#F39C12"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.UsageTimeFormatted, FallbackValue='00:00:00'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#F39C12"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Current Cost -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <TextBlock Text="ðŸ’¸ Current Cost"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#E74C3C"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.CurrentCost, StringFormat='${0:F2}', FallbackValue='$0.00'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#E74C3C"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Hourly Rate -->
                    <Border Style="{StaticResource ModernCardStyle}">
                        <StackPanel>
                            <TextBlock Text="â° Hourly Rate"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="#27AE60"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.HourlyRate, StringFormat='${0:F2}/hour', FallbackValue='$0.00/hour'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#27AE60"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Time Remaining -->
                    <Border Style="{StaticResource ModernCardStyle}" Background="#27AE60">
                        <StackPanel>
                            <TextBlock Text="â³ï¸ Time Remaining"
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.TimeRemainingFormatted, FallbackValue='00:00:00'}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                <!-- Extend Session Button -->
                <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.ExtendSessionAsyncCommand}"
                        Height="45"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#27AE60"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,10,0"
                        Width="*">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â°" Margin="0,0,8,0"/>
                        <TextBlock Text="Extend Session"/>
                    </StackPanel>
                </Button>

                <!-- Logout Button -->
                <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.LogoutAsyncCommand}"
                        Height="45"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,0"
                        Width="*">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸšª" Margin="0,0,8,0"/>
                        <TextBlock Text="Logout"/>
                    </StackPanel>
                </Button>

                <!-- Hide Button -->
                <Button Command="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=UserLoginViewModel.HideToTrayCommand}"
                        Height="45"
                        FontSize="14"
                        FontWeight="Bold"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Width="*">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="5"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                BorderBrush="{TemplateBinding BorderBrush}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ‘ï¸" Margin="0,0,8,0"/>
                        <TextBlock Text="Hide"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>